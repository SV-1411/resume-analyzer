{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "GOOGLE_API_KEY": "@google_api_key",
    "PORT": "5000",
    "NODE_ENV": "production",
    "GEMINI_MODEL": "gemini-1.5-flash",
    "MAX_TOKENS": "2000",
    "TEMPERATURE": "0.3"
  }
}
